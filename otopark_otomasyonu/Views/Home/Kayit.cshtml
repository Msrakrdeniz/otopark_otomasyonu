
@{
    ViewBag.Title = "Kayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Section 1 Bitiş-->
<div class="container">
    <div class="section">

        <div class="row">
            <div class="col s12 center">
                <h3><i class="mdi-content-send brown-text"></i></h3>
                <h4>KİŞİ KAYIT</h4>
                <p class="center light">Kayıt Olabileceğiniz Alan.</p>
                <hr class="hr">
                <div class="row">
                    <form class="col s12" method="post">
                        <div class="row">
                            <div class="input-field col s6">
                                <i class="material-icons prefix">account_circle</i>
                                <input placeholder="İsim Soyisim Giriniz" name="ad" type="text" class="validate">
                                <label for="ad" class="active"></label>
                            </div>
                            
                        </div>
                        <div class="row">
                            <div class="input-field col s6">
                                <i class="material-icons prefix">mail</i>
                                <input name="Email" type="email" class="validate">
                                <label for="Email">Email Giriniz</label>
                            </div>
                            <div class="input-field col s6">
                                <i class="material-icons prefix">local_phone</i>
                                <input name="Telefon" type="number" class="validate">
                                <label for="Telefon">Telefon Numarası Giriniz</label>
                            </div>
                        </div>
                        <div class="row">
                            <div class="input-field col s12">
                                <i class="material-icons prefix">date_range</i>
                                <input placeholder="Tarih Giriniz" name="Tarih" type="datetime" class="validate">
                                <label for="Tarih" class="active"></label>
                            </div>
                        </div>
                        <div class="col m12 s12">
                            <button type="submit" class="waves-effect waves-light btn btn-small red lighten-2"><i class="material-icons left">chevron_right</i><i class="material-icons right">chevron_left</i>Kayıt Ol</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<!--================End Services_area =================-->
