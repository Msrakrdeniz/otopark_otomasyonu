@model otopark_otomasyonu.Models.Siniflar.Arac_bilgisi
@{
    ViewBag.Title = "AracGetir";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col m12">
            <h4 class="center">Araç Bilgilerini Güncelle</h4>
            <p class="center light">Verilerinizi Güncelleyebilirsiniz.</p>
            <hr />
            @using (Html.BeginForm("AracıGuncelle", "Arac", FormMethod.Post))
            {
                @Html.TextBoxFor(m => m.Arac_ID, new { @class = "validate hide" })
                @Html.TextBoxFor(m => m.Kisi_ID, new { @class = "validate hide" })
                <div class="input-field col s6">
                    @Html.TextBoxFor(m => m.Ad_soyad, new { @class = "validate" })
                    <label for="Ad_soyad">Ad Soyad</label>
                </div>
                <div class="input-field col s6">
                    @Html.TextBoxFor(m => m.Telefon, new { @class = "validate" })
                    <label for="Telefon">Telefon</label>
                </div>
                @Html.TextBoxFor(m => m.Marka_ID, new { @class = "validate hide" })
        <div class="row">
            <div class="input-field col s6">
                <i class="material-icons prefix">account_circle</i>
                @Html.TextBoxFor(m => m.Plaka, new { @class = "validate" })
                <label for="Plaka">Plaka</label>
            </div>
            <div class="input-field col s6">
                @Html.TextBoxFor(m => m.Yil, new { @class = "validate" })
                <label for="Yil">Yıl</label>
            </div>
            <div class="input-field col s6">
                @Html.TextBoxFor(m => m.Renk, new { @class = "validate" })
                <label for="Renk">Renk</label>
            </div>
            @Html.TextBoxFor(m => m.Py_ID, new { @class = "validate" })
        </div>
                <div class="row">
                    <div class="input-field col s6">
                        <i class="material-icons prefix">account_circle</i>
                        @Html.TextBoxFor(m => m.Giris_Tarihi, new { @class = "validate" })
                        <label for="Giris_Tarihi">Giriş Tarihi</label>
                    </div>
                    
                </div>
                <div class="col center m12 s12">
                    <button class="waves-effect waves-light btn btn-small red lighten-2"><i class="material-icons left">chevron_right</i><i class="material-icons right">chevron_left</i>Güncelle</button>
                </div>
            }

        </div>
    </div>
</div>

